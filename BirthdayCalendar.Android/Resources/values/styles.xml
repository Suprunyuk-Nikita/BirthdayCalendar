<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
	  <item name="android:statusBarColor">@color/darkGreen</item>
	  <item name="android:navigationBarColor">@color/launcher_background</item>
	  <item name="android:windowLightNavigationBar">true</item>
	  <item name="android:colorControlNormal">@color/transparent</item>
	  <item name="colorAccent">@color/darkGreen</item>
	  <item name="android:textColorHighlight">@color/light_blue</item>
	  <item name="android:textAllCaps">false</item>
	  <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
  </style>

	<style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
		<!--header background-->
		<item name="colorAccent">@color/darkGreen</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">@color/launcher_background</item>
		<!--body background-->
		<item name="android:windowBackground">@color/launcher_background</item>
		<!--selected day-->
		<item name="android:colorControlActivated">@color/darkGreen</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">@color/black</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">@color/black</item>
		<!--cancel&ok-->
		<item name="android:textColor">@color/darkGreen</item>
	</style>
</resources>