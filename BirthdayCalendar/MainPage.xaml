<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BirthdayCalendar.MainPage">

    <Grid HorizontalOptions="FillAndExpand">
        <Image Source="background.png" HorizontalOptions="FillAndExpand" Aspect="AspectFill"/>
        <StackLayout Padding="15">
            <Label x:Name="Date" FontFamily="Comfortaa" FontSize="14" FontAttributes="Bold" TextColor="#EFF2F6" HorizontalTextAlignment="End"/>
            <Label FontFamily="Comfortaa" FontSize="26" FontAttributes="Bold" TextColor="#145535" Text="Birthday!" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </Grid>

</ContentPage>
